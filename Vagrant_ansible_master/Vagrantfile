# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure(2) do |config|
  config.vm.define :master_ansible do |master| # name машины в vagrant global-status
  
  	master.vm.box = "ubuntu/trusty64"
  	master.vm.network "private_network", ip: "192.168.33.12"
	  master.vm.synced_folder "ansible/", "/etc/ansible"
  	master.vm.synced_folder "playbooks/", "/home/vagrant/ansible/playbooks"
  	master.vm.synced_folder ".ssh/", "/home/vagrant/.ssh", owner: "vagrant", group: "vagrant", mount_options: ["dmode=700,fmode=600"]
    config.vm.provider "virtualbox" do |vb|
  	  vb.name = "ansible master" 
  	end
	
	  config.vm.provision "shell", inline: <<-SHELL
  	  sudo apt-get update
    	sudo apt-get install -y python-pip python-software-properties software-properties-common python-jinja2 python-markupsafe yum
    	sudo pip install ansible
  	SHELL
	end

	config.vm.define :debian_ansible_slave do |debian|
	
		debian.vm.box = "debian/jessie64"
  	debian.vm.boot_timeout = 120
  	debian.vm.network "private_network", ip: "192.168.33.124"
  	debian.vm.synced_folder "yandextank/", "/home/vagrant/yandextank"
  	config.vm.provider "virtualbox" do |vb|
  		vb.name = "vagrant debian"
  		vb.memory = "3596"
  	end

  	config.vm.provision "shell", inline: <<-SHELL
  		echo "ssh-rsa  vagrant@vagrant-ubuntu-trusty-64" >> /home/vagrant/.ssh/authorized_keys
    	echo "ssh-rsa  rsa-key-20160609" >> /home/vagrant/.ssh/authorized_keys
  	SHELL
  end
end
